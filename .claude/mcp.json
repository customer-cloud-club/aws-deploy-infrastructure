{
  "mcpServers": {
    "aws-universe": {
      "command": "node",
      "args": [".claude/mcp-servers/aws-universe.js"],
      "env": {
        "UNIVERSE_API_ENDPOINT": "https://06mkv2fwrj.execute-api.ap-northeast-1.amazonaws.com",
        "AWS_REGION": "ap-northeast-1",
        "MIYABI_PROJECT_ID": "aws-deploy-infrastructure"
      },
      "disabled": false,
      "autoApprove": [
        "universe_search",
        "universe_health",
        "universe_metrics",
        "universe_learn"
      ],
      "description": "Miyabi Universe MCP - 三層宇宙検索・θ₆学習・フィードバック"
    },
    "aws-core": {
      "type": "stdio",
      "command": "uvx",
      "args": ["awslabs.core-mcp-server@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "description": "AWS Core MCP Server - AWSサービス横断の基盤機能"
    },
    "aws-documentation": {
      "type": "stdio",
      "command": "uvx",
      "args": ["awslabs.aws-documentation-mcp-server@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR",
        "AWS_DOCUMENTATION_PARTITION": "aws"
      },
      "description": "AWS Documentation MCP - ドキュメント・ベストプラクティス検索"
    },
    "aws-cdk": {
      "type": "stdio",
      "command": "uvx",
      "args": ["awslabs.cdk-mcp-server@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "description": "AWS CDK MCP Server - CDK構文・パターン支援"
    },
    "aws-cfn": {
      "type": "stdio",
      "command": "uvx",
      "args": ["awslabs.cfn-mcp-server@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR",
        "AWS_PROFILE": "default",
        "AWS_REGION": "ap-northeast-1"
      },
      "description": "AWS CloudFormation MCP - CFnテンプレート・スタック管理"
    }
  }
}
